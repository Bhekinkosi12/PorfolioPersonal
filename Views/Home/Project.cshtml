@{
}
@model ProjectM

<main>
<section class="container about active" id="about">
    <div class="main-title">
        <h2>@Model.Name<span>@Model.SubName</span><span class="bg-text">@Model.TitleBG</span></h2>
    </div>
    <div class="about-container">
        <div class="left-about">
            <h4>About</h4>
            <p>
                @Model.FirstParagraph

                <br /> <br />
               @Model.SecondParagraph
            </p>

           
                @if (!string.IsNullOrEmpty(Model.DemoURL))
                {


                    <div class="btn-con">
                        <a href="@Model.DemoURL" class="main-btn">
                    <span class="btn-text">Open Demo</span>
                    <span class="btn-icon"><i class="fas fa-download"></i></span>
                        
                </a>
            </div>
            }
            <br />
           
               @if (!string.IsNullOrEmpty(Model.SourceURL))
                {
                    <div class="btn-con">
                        <a href="@Model.SourceURL" class="main-btn">
                            <span class="btn-text">Source Code</span>
                            <span class="btn-icon"><i class="fas fa-github"></i></span>
                        </a>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.API_URL))
                {
                    <div class="btn-con">
                        <a href="@Model.API_URL" class="main-btn">
                            <span class="btn-text">Project Api</span>
                            <span class="btn-icon"><i class="fas fa-github"></i></span>
                        </a>
                    </div>
                }
               
            </div>
        <div class="right-about">
            <div class="about-item">
                <div class="abt-text">
                    <p class="large-text">@Model.Frame1_Number</p>
                    <p class="small-text">@Model.Frame1_Name <br />@Model.Frame1_NameSub</p>
                </div>
            </div>
            <div class="about-item">
                <div class="abt-text">
                    <p class="large-text">@Model.Frame2_Number</p>
                    <p class="small-text">@Model.Frame2_Name <br />@Model.Frame2_NameSub</p>
                </div>
            </div>
            <div class="about-item">
                <div class="abt-text">
                    <p class="large-text">@Model.Frame3_Number</p>
                    <p class="small-text">@Model.Frame3_Name <br />@Model.Frame3_NameSub</p>
                </div>
            </div>
            <div class="about-item">
                <div class="abt-text">
                    <p class="large-text">@Model.Frame4_Number</p>
                    <p class="small-text">@Model.Frame4_Name <br />@Model.Frame4_NameSub </p>
                </div>
            </div>
        </div>
    </div>
        @if(Model.Images.Count != 0)
        {
            
        
        <h4 class="stat-title">Project Samples</h4>
    <div class="slidee">
        @foreach(var i in Model.Images){

        
        <div class="slidee-item">
            <img src="~/drawables/event1.jpg" />
        </div>
        }
       
    </div>
        }
    <h4 class="stat-title">Project Timeline</h4>
    <div class="timeline">
        @foreach(var i in Model.TimeLineList){

        
        <div class="timeline-item">
            <div class="tl-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <p class="tl-duration">@i.DateTi</p>
            <h5>@i.Name<span> - @i.SubName</span></h5>
            <p>
               @i.Description
            </p>
        </div>
        }
      
       
    </div>
</section>
</main>